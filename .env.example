APP_NAME=pocket-dev
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

DB_CONNECTION=pgsql
DB_HOST=pocket-dev-postgres
DB_PORT=5432
DB_DATABASE=pocket-dev
DB_USERNAME=pocket-dev
DB_PASSWORD=laravel

NGINX_PORT=80
VITE_PORT=5173

# User ID and Group ID for file permissions
# Set these to your host user's UID and GID to prevent permission issues
# Run: id -u (for USER_ID) and id -g (for GROUP_ID) on your host machine
USER_ID=1000
GROUP_ID=1000

# Git credentials for development container
GIT_TOKEN=ghp_your_github_token_here
GIT_USER_NAME="Your Full Name"
GIT_USER_EMAIL=your.email@domain.com

# Security (required - set your own credentials)
BASIC_AUTH_USER=admin
BASIC_AUTH_PASS=CHANGE_THIS_PASSWORD_NOW

# OpenAI API for voice transcription
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API for Claude Code (required for AI coding assistant)
# Get your key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# Self-Development Mode (optional)
# Set this to enable container self-management from inside the container
# Required for developing PocketDev using PocketDev
# HOST_PROJECT_PATH=/home/your-user/projects/pocket-dev
