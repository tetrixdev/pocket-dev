# PocketDev Production Configuration
# Run ./setup.sh to auto-populate these values, or copy to .env and fill manually

# Laravel Application Key (auto-generated by setup.sh)
APP_KEY=

# Application URL (auto-generated by setup.sh based on NGINX_PORT)
APP_URL=http://localhost

# Database connection settings
DB_CONNECTION=pgsql
DB_HOST=pocket-dev-postgres
DB_PORT=5432
DB_DATABASE=pocket-dev
DB_USERNAME=pocket-dev
DB_PASSWORD=

# Read-only database user password (auto-generated by setup.sh)
DB_READONLY_PASSWORD=

# Redis configuration
REDIS_CLIENT=predis
REDIS_HOST=pocket-dev-redis

# Queue and cache configuration
QUEUE_CONNECTION=redis
CACHE_STORE=redis

# HTTP port for PocketDev (default: 80)
NGINX_PORT=80

# Docker image tag (default: latest)
IMAGE_TAG=latest

# Docker group GID from host (required for Docker socket access)
# Run: getent group docker | cut -d: -f3
DOCKER_GID=
